      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    // {essid} for wifi idk why
    // {ipaddr} for ip address
    // {signalStrength}
    "format-wifi": "{icon}",
    "format-icons": [
      "Û∞§Ø",
      "Û∞§ü",
      "Û∞§¢",
      "Û∞§•",
      "Û∞§®"
    ],
    "on-click-middle": "alacritty -e nmtui",
