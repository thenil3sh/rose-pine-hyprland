  "spacing": 0, // Gaps between modules (4px)
  "margin": "0 0 0 8",
  // Choose the order of the modules
  "modules-left": [
    "clock",
    // "custom/waybar_media",
    "custom/recording_status",
    "mpd"
    // "mpris"
  ],
  "modules-center": [
    // "hyprland/window"
    "hyprland/workspaces",
    // "custom/media",
    // "mpd",
    "custom/notification"
  ],
  "modules-right": [
    // "idle_inhibitor",
    "network",
    "pulseaudio",
    // "power-profiles-daemon",
