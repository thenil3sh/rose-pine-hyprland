// -*- mode: jsonc -*-
{
  "name": "waybar",
  "layer": "bottom",
  // "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 35, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 5, // Gaps between modules (4px)
  "margin": "7 10 3 10",
  // Choose the order of the modules
  "modules-left": [
    "clock",
    // "custom/waybar_media",
    // "mpd"
    "mpris"
  ],
  "modules-center": [
    // "hyprland/window"
    // "custom/media",
    // "mpd",
    "pulseaudio",
    "custom/recording_status",
    "privacy",
    "battery",
    "tray",
    "custom/power",
    "custom/notification"
  ],
  "modules-right": [
    "hyprland/workspaces"
    // "idle_inhibitor",
    // "network",
    // "power-profiles-daemon",
    // "cpu",
    // "memory",
    // "temperature",
    // "keyboard-state",
    //"sway/language",
    // "battery#bat2",
  ],
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "ÔÉ≥",
      "none": "ÔÉ≥",
      "dnd-notification": "ÔÉ≥",
      "dnd-none": "",
      "inhibited-notification": "ÔÉ≥",
      "inhibited-none": "",
      "dnd-inhibited-notification": "Û∞Çõ",
      "dnd-inhibited-none": ""
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format-urgent": "{num} : {icon} ",
    "format-active": "Dang",
    "format": "{icon}",
    "format-icons": {
      "active": "Ó™º",
      "default" : "ÔÑë"
    }
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "sway/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": [
      "",
      "Ôãí"
    ],
    "tooltip": true,
    "tooltip-format": "{app}: {title}"
  },
  "custom/waybar-media": {
    "return-type": "json",
    "exec": "waybar-media.py status",
    "on-click": "waybar-media.py playpause",
    "on-scroll-up": "waybar-media.py previous",
    "on-scroll-down": "waybar-media.py next",
    "escape": true
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ÔÄÅ",
    "format-disconnected": "Disconnected ÔÄÅ",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
    "interval": 2,
    "consume-icons": {
      "on": "ÔÉÑ " // Icon shows only when "consume" is on
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ", // Icon grayed out when "random" is off
      "on": "ÔÅ¥ "
    },
    "repeat-icons": {
      "on": "ÔÄû "
    },
    "single-icons": {
      "on": "ÔÄû1 "
    },
    "state-icons": {
      "paused": "ÔÅå",
      "playing": "ÔÅã"
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    }
  },
  "tray": {
    "icons": {
      "discord": "caffeine-cup-full",
      "easyeffects" : "banshee-panel"
    },
    "spacing": 10,
    "icon-size": 20
  },
  "clock": {
    "timezone": "Asia/Calcutta",
    "tooltip-format": "\n{calendar}",
    "format": "{:%H %M}",
    "format-alt": "{:%d %m %y}"
  },
  "cpu": {
    "format": "{usage}% Ôãõ",
    "tooltip": false
  },
  "memory": {
    "format": "{}% ÔÉâ"
  },
  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    // "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": [
      "Ôù´",
      "Ôãâ",
      "Ôù©"
    ]
