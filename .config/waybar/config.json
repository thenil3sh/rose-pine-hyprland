    "format-bluetooth": "{volume}% ÔÄ•",
    "format-bluetooth-on-hover": "{volume} Û∞ãã {format_source}",
    "format-bluetooth-muted": "Û∞üé",
    "format-muted": "Óª®",
    "format-source": "Û∞ç¨",
    "format-source-muted": "Û∞ç≠",
